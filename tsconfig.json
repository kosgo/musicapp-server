{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./build",
		"baseUrl": "src",
		"paths": {
			"@config/*": ["config/*"]
		},
		"esModuleInterop": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src/**/*"
	]
}
